<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.robert.klausurenhub.MainActivity">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cameraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/floating_camera_actionbutton"
        app:backgroundTint="@color/floatingActionButton"
        app:fabSize="normal" />

    <TextView
        android:id="@+id/newimages_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neue Fotos aufnehmen"
        android:textColor="#FF9900"
        tools:text="Neue Fotos aufnehmen"
        android:layout_marginTop="19dp"
        android:layout_alignTop="@+id/cameraButton"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/newimages_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
        android:layout_alignBottom="@+id/newimages_text"
        android:layout_toEndOf="@+id/newimages_text"
        android:layout_alignTop="@+id/newimages_text" />


</RelativeLayout>
