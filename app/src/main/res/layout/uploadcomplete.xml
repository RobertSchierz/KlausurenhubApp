<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/uploadcompleteimage"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_weight="0.21"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_cloud_upload_black_48dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/viewpdf"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="101dp"
        android:layout_weight="0.21"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_pageview_black_48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/newpdf"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_weight="0.21"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_fiber_new_black_48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/viewpdf"
        android:layout_marginBottom="79dp" />


</RelativeLayout>

