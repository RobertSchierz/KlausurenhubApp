<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView_schools"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="Uni/Fachhochschule"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:theme="@style/Autocomplete"/>
        />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView_teachers"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="Lehrkraft"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:theme="@style/Autocomplete"/>
    />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView_courses"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="Studiengang"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:theme="@style/Autocomplete"/>
    />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView_subjects"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="Modul"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:theme="@style/Autocomplete"/>

    <TextView
        android:id="@+id/textview_degrees"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Grad:"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_degrees"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:theme="@style/Spinner"
        android:padding="0dp"
        />

    <TextView
        android:id="@+id/textview_semesters"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Semester:"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_semesters"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:theme="@style/Spinner"
        android:padding="0dp"
        />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView_years"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="Jahr"
        android:inputType="number"
        android:imeOptions="actionDone"
        android:theme="@style/Autocomplete"/>


</LinearLayout>